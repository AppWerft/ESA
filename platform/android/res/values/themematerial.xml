
<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.Material" parent="@style/Theme.AppCompat.Light.DarkActionBar">
	  <item name="actionBarItemBackground">@drawable/selectable_background_esa</item>
	  <item name="popupMenuStyle">@style/PopupMenu.Esa</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Esa</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Esa</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Esa</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Esa</item>
        <item name="actionModeBackground">@drawable/cab_background_top_esa</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_esa</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Esa</item>

                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Esa.Widget</item>
    	<item name="colorPrimary">#800080</item>
	    <item name="colorPrimaryDark">#600060</item>
    	<item name="colorAccent">#800080</item>
	    <item name="colorControlNormal">#800080</item>
    	<item name="colorControlActivated">#800080</item>
	    <item name="colorControlHighlight">#800080</item>
    	<item name="colorSwitchThumbNormal">#BDBDBD</item>
	    <item name="android:colorButtonNormal">#BDBDBD</item>
    	<item name="android:colorEdgeEffect">#800080</item>
    	<item name="android:navigationBarColor">#800080</item>
    	<item name="android:windowDrawsSystemBarBackgrounds">true</item>
	</style>
	<style name="ActionBar.Solid.Esa" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_esa</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_esa</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_esa</item>
        <item name="progressBarStyle">@style/ProgressBar.Esa</item>
    </style>

    <style name="ActionBar.Transparent.Esa" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_esa</item>
        <item name="progressBarStyle">@style/ProgressBar.Esa</item>
    </style>
	
    <style name="PopupMenu.Esa" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_esa</item>	
    </style>
	
    <style name="DropDownListView.Esa" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_esa</item>
    </style>

    <style name="ActionBarTabStyle.Esa" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_esa</item>
    </style>
	
    <style name="DropDownNav.Esa" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_esa</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_esa</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_esa</item>
    </style>
    
    <style name="ProgressBar.Esa" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_esa</item>
    </style>
    
    <style name="ActionButton.CloseMode.Esa" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_esa</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Esa.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Esa</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Esa</item>
    </style>
</resources>
